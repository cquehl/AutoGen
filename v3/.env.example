# Suntory v3 Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# OpenAI (supports GPT-4, GPT-3.5, etc.)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Claude (supports Claude 3.5 Sonnet, Opus, etc.)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google Gemini (supports Gemini Pro, Gemini Ultra, etc.)
GOOGLE_API_KEY=your-google-api-key-here

# Azure OpenAI (alternative to OpenAI)
AZURE_OPENAI_API_KEY=your-azure-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# =============================================================================
# Default Model Selection
# =============================================================================
# Options: gpt-4o, gpt-4-turbo, claude-3-5-sonnet-20241022, gemini-pro
DEFAULT_MODEL=claude-3-5-sonnet-20241022

# =============================================================================
# System Configuration
# =============================================================================

# Environment (development, production)
ENVIRONMENT=development

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite:///./v3/data/suntory.db

# ChromaDB Configuration (for agent memory)
CHROMA_DB_PATH=./v3/data/chroma

# Workspace Directory (for agent code execution)
WORKSPACE_DIR=./v3/workspace

# Docker Configuration
DOCKER_ENABLED=true
DOCKER_TIMEOUT=300

# =============================================================================
# Security Configuration
# =============================================================================

# Allowed directories for file operations (must be JSON array format)
ALLOWED_DIRECTORIES=["./v3/workspace","./v3/data","./v3/logs"]

# Operation timeout (seconds)
OPERATION_TIMEOUT=60

# =============================================================================
# Observability Configuration
# =============================================================================

# Enable telemetry
ENABLE_TELEMETRY=true

# Metrics export port
METRICS_PORT=9090

# Service name for tracing
SERVICE_NAME=suntory-v3

# =============================================================================
# Alfred Configuration
# =============================================================================

# Alfred's greeting style (formal, casual, time_aware)
ALFRED_GREETING_STYLE=time_aware

# Alfred's personality (professional, witty, balanced)
ALFRED_PERSONALITY=balanced

# =============================================================================
# Agent Configuration
# =============================================================================

# Max turns for team conversations
MAX_TEAM_TURNS=30

# Agent response timeout (seconds)
AGENT_TIMEOUT=120

# Enable agent memory persistence
ENABLE_AGENT_MEMORY=true
